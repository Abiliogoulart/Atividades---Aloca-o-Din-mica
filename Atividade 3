#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, par = 0, imp = 0;
    int *vet;

    // Pede ao usuário o tamanho do vetor
    printf("Qual o tamanho do vetor? ");
    scanf("%d", &n);

    // Aloca dinamicamente a memória para o vetor
    vet = (int*) malloc(n * sizeof(int));
    if (vet == NULL) {
        printf("Erro ao alocar memoria!\n");
        return 1;
    }

    // Lê os valores do usuário
    printf("Digite os %d valores:\n", n);
    for (int i = 0; i < n; i++) {
        printf("Elemento %d: ", i + 1);
        scanf("%d", &vet[i]);
    }

    // Conta a quantidade de números pares e ímpares
    for (int i = 0; i < n; i++) {
        if (vet[i] % 2 == 0) {
            par++;
        } else {
            imp++;
        }
    }

    // Mostra os resultados
    printf("\nNumeros pares: %d\n", par);
    printf("Numeros impares: %d\n", imp);

    // Libera a memória alocada
    free(vet);

    return 0;
}
